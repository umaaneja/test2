<?php

namespace YourVendor\Paragraphs;

use Illuminate\Support\ServiceProvider;

class ParagraphsServiceProvider extends ServiceProvider
{
    public function boot()
    {
        // Load views
        $this->loadViewsFrom(__DIR__ . '/../resources/views', 'paragraphs');

        // Load migrations
        $this->loadMigrationsFrom(__DIR__ . '/../database/migrations');

        // Register Blade component
        \Illuminate\Support\Facades\Blade::component('paragraph-region', \YourVendor\Paragraphs\View\Components\ParagraphRegion::class);
    }

    public function register()
    {
        //
    }
}
